<h1>Homepage</h1>

<section>
  <h3>Login</h3>

  <%= form_tag({:controller => 'home', :action => 'index'}, :method => 'post', :class => '') do %>
	<p>
	  <%= label_tag(:email_address, 'Email Address') %>
	  <%= email_field_tag(:email_address) %>
	</p>
	<p>
	  <%= label_tag(:password, 'Password') %>
	  <%= password_field_tag(:password) %>
	</p>
	<%= submit_tag('Login') %>
  <% end %>
</section>

<section>
  <h3>Sign Up</h3>

  <%= form_tag({:controller => 'home', :action => 'index'}, :method => 'post', :class => '') do %>
	<p>
	  <%= label(:user, :username, 'Username') %>
	  <%= text_field(:user, :username) %>
	</p>
	<p>
	  <%= label(:user, :email_address, 'Email Address') %>
	  <%= email_field(:user, :email_address) %>
	</p>
	<p>
	  <%= label(:user, :password, 'Password') %>
	  <%= password_field(:user, :password) %>
	</p>
	<p>
	  <%= label(:user, :password_confirmation, 'Confirm Password') %>
	  <%= password_field(:user, :password_confirmation) %>
	</p>
	<%= submit_tag('Sign up') %>
  <% end %>
</section>

<section>
  <h3>
	<%= link_to 'Try me for free!', {:controller => 'dashboard', :action => 'index'} %>
  </h3> 
</section>